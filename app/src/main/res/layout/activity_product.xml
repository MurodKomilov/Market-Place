<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    tools:context=".ProductActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:layout_marginTop="41dp"
                    android:layout_marginStart="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="41dp"
                    android:layout_marginEnd="30dp"
                    android:src="@drawable/ic_share"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/image_vpA"
                    android:layout_width="match_parent"
                    android:layout_height="368dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ic_back" />

                <me.relex.circleindicator.CircleIndicator3
                    android:id="@+id/indicatorA"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:scrollbarSize="1dp"
                    app:ci_drawable="@drawable/circle_indicator_background"
                    android:layout_alignParentBottom="true"
                    app:layout_constraintTop_toBottomOf="@+id/image_vpA"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />


                <TextView
                    android:id="@+id/productNameA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A`PIEU"
                    android:textSize="16sp"
                    android:textColor="#A0A1A3"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/indicatorA" />

                <TextView
                    android:id="@+id/subtitleA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Пенка для умывания`A`PIEU` `DEEP CLEAN` 200 мл"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/productNameA" />

                <TextView
                    android:id="@+id/left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Доступно для заказа 30 штук"
                    android:textSize="12sp"
                    android:textColor="#A0A1A3"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/subtitleA" />

                <LinearLayout
                    android:id="@+id/feedback"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/left" >

                </LinearLayout>

                <TextView
                    android:id="@+id/newPriceA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="549 ₽"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/feedback" />

                <TextView
                    android:id="@+id/oldPriceA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="899 ₽"
                    android:textSize="12sp"
                    android:textColor="#A0A1A3"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/newPriceA"
                    app:layout_constraintStart_toEndOf="@+id/newPriceA"
                    app:layout_constraintTop_toTopOf="@+id/newPriceA" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/price_promotion_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    app:layout_constraintBottom_toBottomOf="@id/newPriceA"
                    app:layout_constraintStart_toEndOf="@id/oldPriceA"
                    app:layout_constraintTop_toTopOf="@id/newPriceA">

                        <TextView
                            android:id="@+id/discount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="-35%"
                            android:textColor="@color/white"
                            android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Описание"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginTop="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/newPriceA" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/btn_background2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/description">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:text="A`PIEU"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_right"
                            android:layout_marginEnd="15dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/description2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/inter_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnName" />

                <TextView
                    android:id="@+id/hide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Скрыть"
                    android:textSize="12sp"
                    android:textColor="#A0A1A3"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/description2" />

                <TextView
                    android:id="@+id/characteristicsTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Характеристики"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/hide" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/shelf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/text_view_border"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/characteristicsTV">
                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Артикул товара"
                            android:textColor="#3E3E3E"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/articleNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="133987"
                            android:textSize="12sp"
                            android:textColor="#3E3E3E"
                            app:layout_constraintBottom_toBottomOf="@id/textView"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/textView" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/shelf2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/text_view_border"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/shelf">
                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Область использования"
                            android:textColor="#3E3E3E"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Лицо"
                            android:textSize="12sp"
                            android:textColor="#3E3E3E"
                            app:layout_constraintBottom_toBottomOf="@id/textView2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/textView2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/shelf3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="2dp"
                    android:background="@drawable/text_view_border"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/shelf2">
                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Страна производства"
                            android:textColor="#3E3E3E"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Республика Корея"
                            android:textSize="12sp"
                            android:textColor="#3E3E3E"
                            app:layout_constraintBottom_toBottomOf="@id/textView3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/textView3" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/structureTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Состав"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_medium"
                    android:layout_marginTop="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/shelf3" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_copy"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/structureTV"
                    app:layout_constraintBottom_toBottomOf="@id/structureTV"/>

                <TextView
                    android:id="@+id/structure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/structure"
                    android:textColor="#3E3E3E"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/structureTV" />

                <TextView
                    android:id="@+id/detailsAndHide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Подробнее"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/structure" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_background3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/detailsAndHide">

                        <TextView
                            android:id="@+id/newPriceA2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:text="549 ₽"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_marginStart="20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/oldPriceA2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="899 ₽"
                            android:textSize="10sp"
                            android:textColor="#FF8AC9"
                            android:layout_marginStart="10dp"
                            app:layout_constraintBottom_toBottomOf="@+id/newPriceA2"
                            app:layout_constraintStart_toEndOf="@+id/newPriceA2"
                            app:layout_constraintTop_toTopOf="@+id/newPriceA2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Добавить корзину"
                            android:textSize="14sp"
                            android:layout_marginEnd="20dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/inter_medium"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>





</ScrollView>