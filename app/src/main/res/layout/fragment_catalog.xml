<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.CatalogFragment">

    <TextView
        android:id="@+id/catalogTV"
        android:layout_width="65dp"
        android:layout_height="22dp"
        android:layout_marginTop="61dp"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:text="Каталог"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/sort"
        android:layout_width="160dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintEnd_toStartOf="@id/filters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catalogTV">

        <ImageView
            android:id="@+id/ic_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sort" />

        <Spinner
            android:id="@+id/sortSpinner"
            android:layout_width="128dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/filters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Фильтры"
        android:textColor="#3E3E3E"
        android:textSize="14sp"
        android:layout_marginEnd="16dp"
        app:drawableStartCompat="@drawable/ic_filters"
        app:layout_constraintBottom_toBottomOf="@id/sort"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sort"
        app:layout_constraintTop_toTopOf="@id/sort" />

</androidx.constraintlayout.widget.ConstraintLayout>